{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabledManagers": [
    "cocoapods"
  ],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchManagers": ["cocoapods"],
      "addLabels": ["cocoapods"]
    },
    {
      "matchPackagePatterns": ["RxSwift", "RxCocoa"],
      "groupName": "Rx"
    },
    {
      "matchPackagePatterns": ["FirebaseRemoteConfig", "FirebaseInstallations"],
      "groupName": "Firebase"
    }
  ],
  "rangeStrategy": "pin",
  "rebaseWhen": "auto",
  "recreateWhen": "always"
}
