{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabledManagers": [
    "cocoapods"
  ],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchManagers": ["cocoapods"],
      "addLabels": ["cocoapods"]
    },
    {
      "matchPackagePatterns": ["RxSwift", "RxCocoa"],
      "groupName": "Rx Dependencies",
      "commitMessage": {
        "commitMessageAction": "Update",
        "commitMessageTopic": "{{groupName}}",
        "commitMessageTopic": "to v{{toVersion}}"
      }
    },
    {
      "matchPackagePatterns": ["FirebaseRemoteConfig", "FirebaseInstallations"],
      "groupName": "Firebase Dependencies"
      "commitMessage": {
        "commitMessageAction": "Update",
        "commitMessageTopic": "{{groupName}}",
        "commitMessageTopic": "to v{{toVersion}}"
      }
    }
  ],
  "rangeStrategy": "pin",
  "rebaseWhen": "auto",
  "recreateWhen": "always",
  "commitMessage": {
    "commitMessageAction": "Update",
    "commitMessageTopic": "{{depName}}",
    "commitMessageTopic": "to v{{toVersion}}"
  }
}
